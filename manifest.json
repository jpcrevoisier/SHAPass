{
	"manifest_version": 2,
	"name": "SHAPass",
	"description": "Gestionnaire de mots de passe unique par site",
	"version": "0.0.2",
	"icons": {
		"19":"lock20.png",
		"20":"lock20.png",
		"32":"lock32.png",
		"48":"lock48.png",
		"64":"lock64.png",
		"128":"lock128.png",
		"256":"lock256.png",
		"512": "lock512.png"
	},
	"background":
	{
		"page":"background.html"
	},
	"options_ui": {
		"page": "options.html",
		"open_in_tab": true
	},
	"browser_action":
	{
		"default_title": "SHAPass",
		"default_popup": "popup.html",
		"default_icon":
		{
			"19":"lock20.png",
			"20":"lock20.png",
			"32":"lock32.png",
			"48":"lock48.png",
			"64":"lock64.png",
			"128":"lock128.png",
			"256":"lock256.png",
			"512": "lock512.png"
		}
	},
	"permissions": [
		"tabs",
		"activeTab",
		"clipboardWrite"
	],
	"author": "Jean Philippe Crevoisier <jpcrevoisier@gmail.com>",
	"update_url": "https://github.com/jpcrevoisier/SHAPass/raw/master/Extensions/"
}
